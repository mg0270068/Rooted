<Page x:Class="Rooted.OrderEntry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rooted"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OrderEntry">

	<StackPanel Background="#eee">

		<Grid>
		<TextBlock Text="Enter Customer Order Information" Margin="0 30 0 0" FontSize="30"/>
		</Grid>
		
		
		<Grid>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
		<TextBlock Margin="0 30 0 0" Text="First Name" Grid.Column="0" FontSize="20"/>
		<TextBox Margin="0 30 0 0" Grid.Column="1"/>
		<TextBlock Margin="0 30 0 0" Text="Last Name" Grid.Column="2" FontSize="20"/>
		<TextBox Margin="0 30 0 0" Grid.Column="3"/>
		</Grid>
		
		
		<TextBlock Text="Enter Customer Street Address:" FontSize="20"/>
			<TextBox Margin="0 0 1500 0" />
		<TextBlock Text="City" FontSize="20"/>
		<TextBox/>
		<TextBlock Text="State" FontSize="20"/>
		<TextBox/>




	</StackPanel>
</Page>
